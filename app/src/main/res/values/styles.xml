<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SimpleButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/primary_button_size_width_simple</item>
        <item name="android:layout_height">@dimen/primary_button_size_height_simple</item>
        <item name="android:textSize">@dimen/primary_button_text_size_simple</item>
    </style>

</resources>
