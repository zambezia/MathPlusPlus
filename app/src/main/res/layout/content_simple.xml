<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/modeTextView"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorText"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/consoleTextView"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorText"
        android:gravity="right|center_vertical"
        android:text="0."
        android:textSize="25dp"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trigonoModeView"
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="9dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/statusMemoryView"
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="9dp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/primaryOperationsTableLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" >

            <TableRow android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/buttonSeven"
                    style="@style/SimpleButton"
                    android:text="7" />

                <Button
                    android:id="@+id/buttonEight"
                    style="@style/SimpleButton"
                    android:text="8" />

                <Button
                    android:id="@+id/buttonNine"
                    style="@style/SimpleButton"
                    android:text="9" />

                <Button
                    android:id="@+id/buttonLeftparentheses"
                    style="@style/SimpleButton"
                    android:text="(" />

                <Button
                    android:id="@+id/buttonRightparentheses"
                    style="@style/SimpleButton"
                    android:text=")" />
            </TableRow>

            <TableRow android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/buttonFour"
                    style="@style/SimpleButton"
                    android:text="4" />

                <Button
                    android:id="@+id/buttonFive"
                    style="@style/SimpleButton"
                    android:text="5" />

                <Button
                    android:id="@+id/buttonSix"
                    style="@style/SimpleButton"
                    android:text="6" />

                <Button
                    android:id="@+id/buttonMul"
                    style="@style/SimpleButton"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonDiv"
                    style="@style/SimpleButton"
                    android:text="÷" />
            </TableRow>

            <TableRow android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonOne"
                    style="@style/SimpleButton"
                    android:text="1" />

                <Button
                    android:id="@+id/buttontwo"
                    style="@style/SimpleButton"
                    android:text="2" />

                <Button
                    android:id="@+id/buttonThree"
                    style="@style/SimpleButton"
                    android:text="3" />

                <Button
                    android:id="@+id/buttonPlus"
                    style="@style/SimpleButton"
                    android:text="+" />

                <Button
                    android:id="@+id/buttonMinus"
                    style="@style/SimpleButton"
                    android:text="-" />
            </TableRow>

            <TableRow android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/buttonZero"
                    style="@style/SimpleButton"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonpoint"
                    style="@style/SimpleButton"
                    android:text="." />

                <Button
                    android:id="@+id/buttonNegation"
                    style="@style/SimpleButton"
                    android:text="±" />

                <Button
                    android:id="@+id/buttonClear"
                    style="@style/SimpleButton"
                    android:text="AC" />

                <Button
                    android:id="@+id/buttonEqual"
                    style="@style/SimpleButton"
                    android:text="=" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>
