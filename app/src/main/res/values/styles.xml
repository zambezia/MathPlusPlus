<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SimpleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">100dp</item>
        <item name="autoSizeMinTextSize">5dp</item>
        <item name="autoSizeStepGranularity">1dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SimpleButton" parent="SimpleStyle">
        <item name="android:background">@drawable/border</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>


    <style name="SimpleText" parent="SimpleStyle">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorTextLeft</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="SimpleTextLeft" parent="SimpleText">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorTextLeft</item>
        <item name="android:paddingLeft">1dp</item>
    </style>

    <style name="SimpleTextRight" parent="SimpleText">
        <item name="android:gravity">right|center</item>
        <item name="android:textColor">@color/colorTextRight</item>
        <item name="android:paddingRight">1dp</item>
    </style>

</resources>
